<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    android:orientation="vertical"
    tools:context="zt.mezon.graphomany.openclsandbox.ui.camera.CameraHomeFragment">

    <org.opencv.android.JavaCameraView
        android:id="@+id/main_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="11dp"
        android:screenOrientation="reverseLandscape"
        android:visibility="gone"
        opencv:camera_id="front"
        opencv:layout_constraintBottom_toTopOf="@+id/btn_takepicture"
        opencv:layout_constraintStart_toStartOf="parent"
        opencv:layout_constraintTop_toTopOf="parent"
        opencv:show_fps="true" />

    <Button
        android:id="@+id/btn_takepicture"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/custom_button"
        opencv:layout_constraintBottom_toBottomOf="parent"
        opencv:layout_constraintLeft_toLeftOf="parent"
        opencv:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_info"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/custom_button1"
        android:text="@string/string_information"
        android:textColor="#9C27B0"
        opencv:layout_constraintBottom_toBottomOf="parent"
        opencv:layout_constraintEnd_toStartOf="@+id/btn_takepicture" />


</androidx.constraintlayout.widget.ConstraintLayout>